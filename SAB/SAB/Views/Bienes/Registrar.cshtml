
@{
    ViewBag.Title = "Registrar";
}

<div class="panel panel-default">
    <div class="panel-heading">Registro de bienes</div>
    <div class="panel-body">
        <form role="form" method="post" action="">

            <table class="table table-striped">

                <tr>

                    <td> Tipo de bien</td>
                    <td>

                        <select class="form-control" id="listadoBienes">
                            <option></option>
                            <option>Electronico</option>
                            <option>Muebles y enceres</option>
                            <option>Inmuebles</option>
                            <option>Vehiculos</option>

                        </select>
                    </td>
                    <td >Serial</td>
                    <td><input type="text" class="form-control" id="numeroSerial" /> </td>

                </tr>
                <tr>
                    <td>Referencia</td>
                    <td><input type="text" class="form-control" id="nombreReferencia" /></td>

                </tr>

                <tr>

                    <td>Fecha de Compra</td>

                    <td>
                        <div class="input-group date fecha"> 
                            <input type="text" class="form-control datepicker" id="fechacompra">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-th"></i>
                            </span>
                        </div>
                    </td>

                </tr>

                <tr>

                    <td>Fecha de Ingreso</td>

                    <td> <div class="input-group date fecha" >
    <input type="text" class="form-control datepicker" id="fechaingreso">
    <span class="input-group-addon">
        <i class="glyphicon glyphicon-th"></i>
    </span>
    </div>
                    </td>

                </tr>


                <tr>
                   
                    <td colspan="4" align="right">
  
                         <input type="submit" value="Registrar" class="btn-primary" />
                    
                    </td>

                </tr>

            </table>
        </form>

    </div>
</div>
<script>

    $('.fecha').datepicker({
        language: "es",
        autoclose: true,
        format: 'dd/mm/yyyy',
        todayHighlight: true
     
    });

</script>







