
@{
    ViewBag.Title = "Prestamo";
}

<div class="panel panel-default">
    <h1 style="text-align:center">PRESTAMO DE BIENES </h1>
    <div class="panel-body">
        <div id="alert_placeholder"></div>
        <form id="registro" role="form" method="post" action="">

            <table class="table table-striped">

                <tr>

                    
                   
                    <td>Nombre</td>
                    <td><input type="text" class="form-control " data-validation="required" data-validation-error-msg="Digite su nombre" maxlength="40" placeholder="Nombre" id="Nombre" /> </td>
                   
                    
                     <td>Apellido</td>
                    <td><input type="text" class="form-control " data-validation="required" data-validation-error-msg="Digite su primer Apellido " maxlength="40" placeholder="Apellido" id="Apellido" /> </td>


                </tr>
                <tr>
                    <td>Número de documento</td>
                    <td><input type="text" class="form-control número" data-validation="required" data-validation-error-msg="digitar un número de documento " maxlength="20" placeholder="Número de Documento" id="númerodocumento" /> </td>
                    
                    
                    <td>Cargo</td>
                    <td><input type="text" class="form-control " data-validation="required" data-validation-error-msg="Digite su Cargo " maxlength="40" placeholder="Perfil" id="cargodelempleador" /> </td>



                </tr>

                <tr>
                    <td>Tipo de Bien</td>
                    <td><input type="text" class="form-control" data-validation="required" data-validation-error-msg="Digite el bien a solicitar" maxlength="50" placeholder="Tipo de Bien" id="tipodebien" /></td>

                    <td>Serial</td>
                    <td><input type="text" class="form-control numero" data-validation="required" data-validation-error-msg="Debe digitar un numero serial " maxlength="20" placeholder="Numero de serie" id="numeroSerial" /> </td>

                </tr>

                <tr>

                    <td>Fecha de prestamo</td>

                    <td>
                        <div class="input-group date fecha">
                            <input type="text" class="form-control datepicker" id="fechaprestamo">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-th"></i>
                            </span>
                        </div>
                    </td>



                    <td>Fecha de finalizacion de prestamo</td>

                    <td>
                        <div class="input-group date fecha">
                            <input type="text" class="form-control datepicker" id="fechafprestamo">
                            <span class="input-group-addon">
                                <i class="glyphicon glyphicon-th"></i>
                            </span>
                        </div>
                    </td>




                </tr>


                <tr>
                    <td colspan="4" align="right">
                        <input type="submit" value="Ingresar" class="btn-primary" />
                    </td>

                    <td colspan="4" align="right">
                        <input type="submit" value="Modificar" class="btn-primary" />
                    </td>

                    <td colspan="4" align="right">
                        <input type="submit" value="Cancelar" class="btn-primary" />
                    </td>


                    <td colspan="4" align="right">
                        <input type="submit" value="Imprimir" class="btn-primary" />
                    </td>

                </tr>


            </table>


            <div class="container">

                <p>Listado de datos:</p>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Documento</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Bien</th>
                            <th>Serial</th>
                            <th>Valor</th>
                            <th>Fecha de prestamo</th>
                            <th>Fecha de finalizacion de prestamo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>

                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>

                        </tr>
                        <tr>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>

                        </tr>

                    </tbody>
                </table>
            </div>



        </form>
    </div>
</div>








<script>
    var spanishLanguage = {
        errorTitle: 'Hay datos incorrectos en el formulario'
    }

    $.validate({
        validationOnBlur: false, // distable validation when input looses focus
        errorMessagePosition: 'top', // Instead of 'inline' wich is default
        scrollToTopOnError: true, // set this property to true on longer form
        language: spanishLanguage
    });


    $('.fecha').datepicker({
        language: "es",
        autoclose: true,
        format: 'dd/mm/yyyy',
        todayHighlight: true

    });

    $(".numero").keyup(function () {
        this.value = this.value.replace(/[^0-9\.]/g, '');

    });

    $('#registro').submit(function (event) {

        if ($('#numeroSerial').val().length < 6) {
            bootstrap_alert.warning('El numero de documento debe tener minimo seis digitos')
            return false;
        }


    });


    bootstrap_alert = function () { };
    bootstrap_alert.warning = function (message) {
        $('#alert_placeholder').
        html('<div class="alert alter-danger"><a class="close" data-dismiss="alert">x</a><span>' + message + '</span></div>');
    };




</script>

